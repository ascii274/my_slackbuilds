#!/bin/env zsh

# Massive credit to the B.Watson for the SlackBuilds.org script. This is
# essentially the same SlackBuild, except that it checks out the source
# from git.

PRGNAM=gzdoom
REPO=https://github.com/coelckers/${PRGNAM}.git

# xBRZ support. Taken from this rejected pull request:
# https://github.com/coelckers/gzdoom/pull/7
# As far as I can tell, the license issues just mean that I can't distribute
# the source after the patch is applied, or any binaries created from that source.
# This will stay until I hear otherwise from either project.
XBRZ_VERSION=1.4
XBRZ_PATCH=${PRGNAM}-g2.1.0_xBRZ-${XBRZ_VERSION}.diff

BUILD=1
TAG=dc

TMP=${TMP:-/tmp}
PKG=$TMP/package-$PRGNAM

if [[ -z $ARCH ]]; then
	case $( uname -m ) in
		i?86) ARCH=i486 ;;
		arm*) ARCH=arm ;;
		*) ARCH=$( uname -m ) ;;
	esac
fi

case $ARCH in
	"i486")
		SLKCFLAGS="-O2 -march=i486 -mtune=i686"
		LIBDIRSUFFIX=""
		;;
	"i686")
		SLKCFLAGS="-O2 -march=i686 -mtune=i686"
		LIBDIRSUFFIX=""
		;;
	"x86_64")
		SLKCFLAGS="-O2 -fPIC"
		LIBDIRSUFFIX="64"
		;;
	*)
	 	SLKCFLAGS="-O2"
		LIBDIRSUFFIX=""
		;;
esac

CWD=$PWD

# Query GitHub for the latest version

read -r -d '' PARSER <<EOF
# Get the latest version
import json
import sys

releases = json.load(sys.stdin)
for release in releases:
	if release["tag_name"].startswith("g2"):
		print release["tag_name"]
		break
EOF

VERSION=$(curl -H "Accept: application/vnd.github.v3.raw+json" https://api.github.com/repos/coelckers/gzdoom/releases | python -c $PARSER)

# This needs to be moved down, as it causes the HEREDOC above to not work.
set -e

rm -rf $PKG
rm -rf ${TMP}/${PRGNAM}

cd $TMP

git clone https://github.com/coelckers/${PRGNAM}.git

cd $PRGNAM

git checkout $VERSION

patch -p1 --verbose < $CWD/$XBRZ_PATCH

wget https://raw.githubusercontent.com/Ponce/slackbuilds/current/games/${PRGNAM}/${PRGNAM}.png
wget https://raw.githubusercontent.com/Ponce/slackbuilds/current/games/${PRGNAM}/${PRGNAM}.desktop
wget https://raw.githubusercontent.com/Ponce/slackbuilds/current/games/${PRGNAM}/slack-desc
wget https://raw.githubusercontent.com/Ponce/slackbuilds/current/games/${PRGNAM}/doinst.sh
wget http://downloads.sourceforge.net/project/xbrz/xBRZ/xBRZ_${XBRZ_VERSION}.zip

mkdir -p src/gl/xBRZ
cd src/gl/xBRZ
unzip ../../../xBRZ_${XBRZ_VERSION}.zip
patch -p1 < $CWD/xBRZ-1.4_cmath.diff
cd $TMP/${PRGNAM}

# Uncomment for FMOD support
#
# There are license issues with distributing this, and you're going to
# have to ask the company for access to the tarball yourself. Sorry.
#
# FMOD_SOURCE=/path/to/fmodapi44463linux.tar.gz
# tar xf ${FMOD_SOURCE}
# mv $(basename $FMOD_SOURCE .tar.gz) fmod
# # Support versions of fmod newer than 4.44.50
# patch -p1 < $CWD/newer_fmod.diff

chown -R root:root .
find -L . \
	\( -perm 777 -o -perm 775 -o -perm 750 -o -perm 711 -o -perm 555 \
	-o -perm 511 \) -exec chmod 755 {} \; -o \
	\( -perm 666 -o -perm 664 -o -perm 640 -o -perm 600 -o -perm 444 \
	-o -perm 440 -o -perm 400 \) -exec chmod 644 {} \;


mkdir -p build
cd build
cmake \
	-DCMAKE_C_FLAGS_RELEASE:STRING="$SLKCFLAGS -DSHARE_DIR=\\\"/usr/share/games/doom\\\"" \
	-DCMAKE_CXX_FLAGS_RELEASE:STRING="$SLKCFLAGS -DSHARE_DIR=\\\"/usr/share/games/doom\\\"" \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DCMAKE_BUILD_TYPE=Release ..
make
mkdir -p $PKG/usr/bin $PKG/usr/share/games/doom
install -m0755 -s $PRGNAM $PKG/usr/bin/$PRGNAM
install -m0644 *.pk3 $PKG/usr/share/games/doom/

# If fmodapi support was compiled in:
if [[ -e liboutput_sdl.so ]]; then
	mkdir -p $PKG/usr/lib$LIBDIRSUFFIX/$PRGNAM
	install -m0755 -s liboutput_sdl.so $PKG/usr/lib$LIBDIRSUFFIX/$PRGNAM/liboutput_sdl.so
fi

cd -

find $PKG -print0 | xargs -0 file | grep -e "executable" -e "shared object" | grep ELF \
	| cut -f 1 -d : | xargs strip --strip-unneeded 2> /dev/null || true

# .desktop written for this SlackBuild
mkdir -p $PKG/usr/share/applications
cat $TMP/${PRGNAM}/${PRGNAM}.desktop > $PKG/usr/share/applications/${PRGNAM}.desktop

# PNG converted from Windows icon
mkdir -p $PKG/usr/share/pixmaps
cat $TMP/${PRGNAM}/${PRGNAM}.png > $PKG/usr/share/pixmaps/${PRGNAM}.png

mkdir -p $PKG/usr/doc/${PRGNAM}-${VERSION}
cp -a docs/* $PKG/usr/doc/${PRGNAM}-${VERSION}

# Fix DOS CRLF line endings
sed -i 's/\r//' $PKG/usr/doc/$PRGNAM-$VERSION/*

mkdir -p $PKG/install
cat $TMP/${PRGNAM}/slack-desc > $PKG/install/slack-desc
cat $TMP/${PRGNAM}/doinst.sh > $PKG/install/doinst.sh
cd $PKG
/sbin/makepkg -l y -c n ${TMP}/${PRGNAM}-${VERSION}-${ARCH}-${BUILD}${TAG}.txz
